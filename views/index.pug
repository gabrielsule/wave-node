#waveContainer
script.
  var wavesurfer = WaveSurfer.create({
  container: '#waveContainer',
  waveColor: 'red',
  progressColor: 'green'
  });
  wavesurfer.load('audio/33.mp3');
  wavesurfer.on('ready', function () {
  wavesurfer.play();
  });
